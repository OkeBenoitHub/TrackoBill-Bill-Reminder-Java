<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <!-- Main header -->
    <LinearLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenish_bg_color">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_head_bg_color"
                android:fontFamily="@font/lato_heavy"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/smart_bill_reminder_app"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/main_head_text_color"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/main_bg_color"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/no_content_description"
            android:scaleType="center"
            android:src="@drawable/trackobill_128" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_head_bg_color"
                android:fontFamily="@font/lato_medium"
                android:padding="8dp"
                android:text="@string/trackobill_helps_you_head_text"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/about_content_color" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/main_head_bg_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/budget_64"
                android:drawableLeft="@drawable/budget_64"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app_head_1"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_bg_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/reminder_64"
                android:drawableLeft="@drawable/reminder_64"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app_head_2"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_bg_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/priority"
                android:drawableLeft="@drawable/priority"
                android:drawablePadding="24dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app_head_3"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_id">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
    <!-- /////////// -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/mainButtonsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- View bills button -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_round"
                app:mrl_rippleColor="@color/colorPrimaryDark"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="20dp">

                <Button
                    android:id="@+id/viewBillsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/view_my_bills_button_text"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>