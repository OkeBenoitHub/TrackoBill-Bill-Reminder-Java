<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/colorPrimaryDark"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/no_content_description"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="@string/amount_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                tools:text="Bill name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bill_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray"
                    tools:text="$19.99" />

                <TextView
                    android:id="@+id/bill__paid_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray"
                    tools:text="[paid]" />

                <TextView
                    android:id="@+id/bill__on_hold_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray"
                    tools:text="[paid]"
                    android:layout_marginStart="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/bill_due_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                tools:text="$19.99" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/check_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:clickable="true"
                android:contentDescription="@string/no_content_description"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_check_circle_white_36dp"
                android:tint="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/check_on_hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check_paid"
                android:layout_toRightOf="@id/check_paid"
                android:clickable="true"
                android:contentDescription="@string/no_content_description"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_pending_actions_white_36dp"
                android:tint="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/undo_on_hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/check_on_hold"
                android:layout_toRightOf="@id/check_on_hold"
                android:clickable="true"
                android:visibility="gone"
                android:contentDescription="@string/no_content_description"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_undo_white_36dp"
                android:tint="@color/colorPrimaryDark" />

        </RelativeLayout>

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>